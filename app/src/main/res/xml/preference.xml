<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:key="@string/preferences_main_key"
    >
    <PreferenceCategory
        android:key="@string/preferences_category_questions_key"
        android:title="@string/preferences_category_questions_label"
        >
        <PreferenceScreen
            android:key="@string/preferences_questions_descriptionBeforeLessonWithExceptionRule_screen_key"
            android:title="@string/preferences_questions_descriptionBeforeLessonWithExceptionRule_label_long"
            >
            <CheckBoxPreference
                android:key="@string/preferences_questions_descriptionBeforeLessonWithExceptionRule_key"
                />
        </PreferenceScreen>
        <EditTextPreference
            android:key="@string/preferences_questions_numberOfAttemptsPerQuestion_key"
            android:title="@string/preferences_questions_numberOfAttemptsPerQuestion_label"
            android:summary="@string/preferences_questions_numberOfAttemptsPerQuestion_description"
            android:dialogTitle="@string/preferences_questions_numberOfAttemptsPerQuestion_dialog_label"
            android:defaultValue="1"
            android:inputType="number"
            />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/preferences_category_general_key"
        android:title="@string/preferences_category_general_label"
        >
        <ListPreference
            android:key="@string/preferences_general_themeColor_key"
            android:title="@string/preferences_general_themeColor_label"
            android:dialogTitle="@string/preferences_general_themeColor_dialog_label"/>
    </PreferenceCategory>

</PreferenceScreen>