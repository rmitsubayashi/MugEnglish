<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:textSize="19sp"
        android:text="@string/onboarding3_explanation"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/onboarding3_marker"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            />
        <!--man-->
        <LinearLayout
            android:id="@+id/onboarding3_man_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:background="@drawable/transparent_button_borderless"
            android:clickable="true"
            android:gravity="center"
            android:weightSum="1"
            android:layout_alignEnd="@id/onboarding3_marker"
            >
            <ImageView
                android:id="@+id/onboarding3_man_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_man"
                android:tint="@color/gray500"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/onboarding3_man_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/onboarding3_man_layout"
            android:layout_alignEnd="@id/onboarding3_marker"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:textColor="@color/gray500"
            android:text="@string/onboarding3_starter_pack_man"/>
        <!--woman-->
        <LinearLayout
            android:id="@+id/onboarding3_woman_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:background="@drawable/transparent_button_borderless"
            android:clickable="true"
            android:gravity="center"
            android:weightSum="1"
            android:layout_alignStart="@id/onboarding3_marker"
            >
            <ImageView
                android:id="@+id/onboarding3_woman_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_woman"
                android:tint="@color/gray500"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/onboarding3_woman_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/onboarding3_woman_layout"
            android:layout_alignStart="@id/onboarding3_marker"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:textColor="@color/gray500"
            android:text="@string/onboarding3_starter_pack_woman"/>
        <!--boy-->
        <LinearLayout
            android:id="@+id/onboarding3_boy_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_alignEnd="@id/onboarding3_marker"
            android:layout_below="@id/onboarding3_man_text"
            android:orientation="horizontal"
            android:background="@drawable/transparent_button_borderless"
            android:clickable="true"
            android:gravity="center"
            android:weightSum="1"
            >
            <ImageView
                android:id="@+id/onboarding3_boy_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_man"
                android:tint="@color/gray500"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/onboarding3_boy_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/onboarding3_boy_layout"
            android:layout_alignEnd="@id/onboarding3_marker"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:textColor="@color/gray500"
            android:text="@string/onboarding3_starter_pack_boy"/>
        <!--girl-->
        <LinearLayout
            android:id="@+id/onboarding3_girl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_alignStart="@id/onboarding3_marker"
            android:layout_below="@id/onboarding3_woman_text"
            android:orientation="horizontal"
            android:background="@drawable/transparent_button_borderless"
            android:clickable="true"
            android:gravity="center"
            android:weightSum="1"
            >
            <ImageView
                android:id="@+id/onboarding3_girl_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_woman"
                android:tint="@color/gray500"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/onboarding3_girl_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/onboarding3_girl_layout"
            android:layout_alignStart="@id/onboarding3_marker"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:textColor="@color/gray500"
            android:text="@string/onboarding3_starter_pack_girl"/>
    </RelativeLayout>


</LinearLayout>