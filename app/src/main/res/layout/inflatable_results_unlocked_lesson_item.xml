<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">
    <Button
        android:id="@+id/results_unlocked_lesson_item_go_to_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/transparent_button"
        android:textColor="?attr/colorAccent500"
        android:text="@string/results_unlocked_lesson_item_go_to_lesson"/>
    <TextView
        android:id="@+id/results_unlocked_lesson_item_lesson_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/results_unlocked_lesson_item_lesson_title"
        android:textSize="21sp"
        />
</RelativeLayout>