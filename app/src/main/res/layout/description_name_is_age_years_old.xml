<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_subheader"
        android:text="@string/description_name_is_age_years_old_subheader"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_text"
        android:text="@string/description_name_is_age_years_old_introduction"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="1">
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_name_is_age_years_old_word1"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_name_is_age_years_old_meaning1"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_name_is_age_years_old_word2"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_name_is_age_years_old_meaning2"/>
        </TableRow>
    </TableLayout>
</LinearLayout>