<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_subheader"
        android:text="@string/description_template_new_word"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="1">
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_find_stand_sit_on_a_bed_word1"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_find_stand_sit_on_a_bed_meaning1"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_find_stand_sit_on_a_bed_word2"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_find_stand_sit_on_a_bed_meaning2"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_text"
        android:text="@string/description_find_stand_sit_on_a_bed_new_word1"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/preposition_on"/>
</LinearLayout>