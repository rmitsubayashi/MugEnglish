<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_subheader"
        android:text="@string/description_template_explanation"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_text"
        android:text="@string/description_name_speaks_language_explanation"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_subheader"
        android:text="@string/description_name_speaks_language_header"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="1">
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_name_speaks_language_word1"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_name_speaks_language_meaning1"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_name_speaks_language_word2"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_name_speaks_language_meaning2"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_name_speaks_language_word3"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_name_speaks_language_meaning3"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_name_speaks_language_word4"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_name_speaks_language_meaning4"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_name_speaks_language_word5"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_name_speaks_language_meaning5"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_name_speaks_language_word6"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_name_speaks_language_meaning6"/>
        </TableRow>
    </TableLayout>
</LinearLayout>