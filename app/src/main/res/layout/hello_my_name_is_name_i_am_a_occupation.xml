<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray50"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <include layout="@layout/inflatable_lesson_description_to_clear_score"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/description_lesson_subheader"
            android:text="@string/description_template_review"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/description_hello_my_name_is_name_i_am_a_occupation_introduction"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            style="@style/description_lesson_subheader"
            android:tag="@string/lesson_description_exception_tag"
            android:text="@string/description_template_grammar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/description_lesson_text"
            android:tag="@string/lesson_description_exception_tag"
            android:text="@string/description_hello_my_name_is_name_i_am_a_occupation_grammar_exception"/>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/lesson_description_exception_tag"
            android:shrinkColumns="1">
            <TableRow>
                <TextView
                    android:padding="12dp"
                    android:textSize="15sp"
                    android:textColor="?attr/color300"
                    android:text="@string/description_table_point_of_view_1"/>
                <TextView
                    android:padding="12dp"
                    android:textSize="15sp"
                    android:text="@string/description_table_point_of_view_meaning_1"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="12dp"
                    android:textSize="15sp"
                    android:textColor="?attr/color300"
                    android:text="@string/description_table_point_of_view_2"/>
                <TextView
                    android:padding="12dp"
                    android:textSize="15sp"
                    android:text="@string/description_table_point_of_view_meaning_2"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="12dp"
                    android:textSize="15sp"
                    android:textColor="?attr/color300"
                    android:text="@string/description_table_point_of_view_3"/>
                <TextView
                    android:padding="12dp"
                    android:textSize="15sp"
                    android:text="@string/description_table_point_of_view_meaning_3"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>