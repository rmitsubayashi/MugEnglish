<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_subheader"
        android:text="@string/description_good_morning_afternoon_evening_subheader"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_text"
        android:text="@string/description_good_morning_afternoon_evening_introduction"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:shrinkColumns="1">
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_good_morning_afternoon_evening_word1"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_good_morning_afternoon_evening_meaning1"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_good_morning_afternoon_evening_word2"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_good_morning_afternoon_evening_meaning2"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_good_morning_afternoon_evening_word3"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_good_morning_afternoon_evening_meaning3"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:layout_marginBottom="24dp"
        android:text="@string/description_good_morning_afternoon_evening_explanation"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:shrinkColumns="1">
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_good_morning_afternoon_evening_word2_1"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_good_morning_afternoon_evening_meaning2_1"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_good_morning_afternoon_evening_word2_2"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_good_morning_afternoon_evening_meaning2_2"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_good_morning_afternoon_evening_word2_3"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_good_morning_afternoon_evening_meaning2_3"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_subheader"
        android:text="@string/description_template_practical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/description_lesson_text"
        android:text="@string/description_good_morning_afternoon_evening_practical"/>
</LinearLayout>