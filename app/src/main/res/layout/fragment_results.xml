<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/results_correct_ct"
            android:textSize="15sp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:textSize="21sp"
            android:id="@+id/results_questions_correct"/>
        <!--only show if the user needs to review-->
        <Button
            android:id="@+id/results_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:background="@drawable/lblue_button"
            android:textColor="@color/white"
            android:text="@string/results_review"
            />
        <!--change text and layout depending on whether the user needs to review-->
        <Button
            android:id="@+id/results_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/lblue_button"
            android:textColor="@color/white"
            android:text="@string/results_finish_no_review"/>

        <TextView
            android:id="@+id/results_first_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:visibility="invisible"
            android:textSize="17sp"
            android:text="@string/results_first_clear"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:text="@string/results_vocabulary"/>
        <LinearLayout
            android:id="@+id/results_vocabulary_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </LinearLayout>
</ScrollView>
