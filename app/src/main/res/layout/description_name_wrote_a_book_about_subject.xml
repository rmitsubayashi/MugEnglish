<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp"
            android:clipToPadding="false"
            android:background="@color/gray50"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <include layout="@layout/inflatable_lesson_description_to_clear_score"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/description_lesson_subheader"
            android:text="@string/description_template_review"/>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shrinkColumns="1">
            <TableRow>
                <TextView
                    style="@style/description_table_highlighted_item"
                    android:text="@string/description_name_wrote_a_book_about_subject_word1"/>
                <TextView
                    style="@style/description_table_plain_item"
                    android:text="@string/description_name_wrote_a_book_about_subject_meaning1"/>
            </TableRow>
            <TableRow>
                <TextView
                    style="@style/description_table_highlighted_item"
                    android:text="@string/description_name_wrote_a_book_about_subject_word2"/>
                <TextView
                    style="@style/description_table_plain_item"
                    android:text="@string/description_name_wrote_a_book_about_subject_meaning2"/>
            </TableRow>
            <TableRow>
                <TextView
                    style="@style/description_table_highlighted_item"
                    android:text="@string/description_name_wrote_a_book_about_subject_word3"/>
                <TextView
                    style="@style/description_table_plain_item"
                    android:text="@string/description_name_wrote_a_book_about_subject_meaning3"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/description_lesson_subheader"
            android:tag="@string/lesson_description_exception_tag"
            android:text="@string/description_template_explanation"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/description_lesson_text"
            android:tag="@string/lesson_description_exception_tag"
            android:text="@string/description_name_wrote_a_book_about_subject_exception"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/description_lesson_subheader"
            android:text="@string/description_template_fun_fact"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/description_lesson_text"
            android:text="@string/description_name_wrote_a_book_about_subject_exception2"/>
    </LinearLayout>
</ScrollView>