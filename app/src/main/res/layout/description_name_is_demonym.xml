<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_subheader"
        android:text="@string/description_name_is_demonym_subheader"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_text"
        android:text="@string/description_name_is_demonym_introduction"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_subheader"
        android:text="@string/description_template_how_to_remember"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_text"
        android:text="@string/description_name_is_demonym_how_to_remember_introduction"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="1">
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_name_is_demonym_how_to_remember_suffix1"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_name_is_demonym_how_to_remember_guide1"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_name_is_demonym_how_to_remember_suffix2"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_name_is_demonym_how_to_remember_guide2"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_name_is_demonym_how_to_remember_suffix3"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_name_is_demonym_how_to_remember_guide3"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_name_is_demonym_how_to_remember_suffix4"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_name_is_demonym_how_to_remember_guide4"/>
        </TableRow>
    </TableLayout>
</LinearLayout>