<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_subheader"
        android:text="@string/description_template_grammar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_text"
        android:text="@string/description_walk_turn_create_past_grammar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/description_lesson_text"
        android:text="@string/description_walk_turn_create_past_grammar2"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="1">
        <TableRow>
            <TextView
                android:padding="12dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/description_walk_turn_create_past_present"/>
            <TextView
                android:padding="12dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/description_walk_turn_create_past_past"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_walk_turn_create_past_word1_present"/>
            <TextView
                style="@style/description_table_plain_item"
                android:text="@string/description_walk_turn_create_past_word1_past"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_walk_turn_create_past_word2_present"/>
            <TextView
                android:padding="12dp"
                android:textSize="15sp"
                android:text="@string/description_walk_turn_create_past_word2_past"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/description_table_highlighted_item"
                android:text="@string/description_walk_turn_create_past_word3_present"/>
            <TextView
                android:padding="12dp"
                android:textSize="15sp"
                android:text="@string/description_walk_turn_create_past_word3_past"/>
        </TableRow>
    </TableLayout>
</LinearLayout>