<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingBottom="36dp"
                  android:orientation="vertical"
                  android:background="@color/gray50">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="?attr/color500">
            <Switch
                android:id="@+id/preferences_subscreen_switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:id="@+id/preferences_subscreen_switch_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/preferences_subscreen_switch_button"
                android:textSize="17sp"
                android:textColor="@color/white"/>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="21sp"
            android:textColor="?attr/colorAccent500"
            android:text="@string/preferences_subscreen_functionality_title"/>
        <TextView
            android:id="@+id/preferences_subscreen_switch_functionality_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="17sp"
            android:lineSpacingExtra="9sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="21sp"
            android:textColor="?attr/colorAccent500"
            android:text="@string/preferences_subscreen_reason_title"
            />
        <TextView
            android:id="@+id/preferences_subscreen_switch_reason_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="17sp"
            android:lineSpacingExtra="9sp"
            />
    </LinearLayout>
</ScrollView>