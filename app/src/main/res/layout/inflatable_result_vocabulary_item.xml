<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    >
    <Button
        android:id="@+id/results_vocabulary_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/transparent_button"
        android:textColor="?attr/colorAccent500"
        android:text="@string/results_vocabulary_item_add"/>
    <TextView
        android:id="@+id/results_vocabulary_item_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/results_vocabulary_item_add"
        android:textStyle="bold"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/results_vocabulary_item_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_below="@id/results_vocabulary_item_word"
        android:layout_alignStart="@id/results_vocabulary_item_word"
        android:layout_toStartOf="@id/results_vocabulary_item_add"
        android:textSize="15sp"/>

</RelativeLayout>