<resources>
    <style name="AppTheme" parent="@style/PreferenceFixTheme.Light.NoActionBar">
        <!--tells the app that there is an action bar and we should
        overlay over it when displaying the action mode-->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/gray500</item>
    </style>

    <style name="AppTheme.Blue" parent="AppTheme">
        <item name="colorPrimary">@color/light_blue500</item>
        <item name="colorPrimaryDark">@color/light_blue700</item>
        <item name="colorAccent">@color/purple500</item>
        <item name="color300">@color/light_blue300</item>
        <item name="color500">@color/light_blue500</item>
        <item name="color700">@color/light_blue700</item>
        <item name="color900">@color/light_blue900</item>
        <item name="colorAccent300">@color/purple300</item>
        <item name="colorAccent500">@color/purple500</item>
        <item name="colorAccent700">@color/purple700</item>
    </style>

    <style name="AppTheme.Green" parent="AppTheme">
        <item name="colorPrimary">@color/light_green500</item>
        <item name="colorPrimaryDark">@color/light_green700</item>
        <item name="colorAccent">@color/orange500</item>
        <item name="color300">@color/light_green300</item>
        <item name="color500">@color/light_green500</item>
        <item name="color700">@color/light_green700</item>
        <item name="color900">@color/light_green900</item>
        <item name="colorAccent300">@color/orange300</item>
        <item name="colorAccent500">@color/orange500</item>
        <item name="colorAccent700">@color/orange700</item>
    </style>

    <style name="AppTheme.Yellow" parent="AppTheme">
        <item name="colorPrimary">@color/yellow500</item>
        <item name="colorPrimaryDark">@color/yellow700</item>
        <item name="colorAccent">@color/red500</item>
        <item name="color300">@color/yellow300</item>
        <item name="color500">@color/yellow500</item>
        <item name="color700">@color/yellow700</item>
        <item name="color900">@color/yellow900</item>
        <item name="colorAccent300">@color/red300</item>
        <item name="colorAccent500">@color/red500</item>
        <item name="colorAccent700">@color/red700</item>
    </style>

    <!--standard style for all types of questions-->
    <style name="questions_instructions">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">@color/gray500</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="questions_question">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="questions_submit_button">
        <item name="android:background">@drawable/colored_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!--no style for the background of descriptions because
    that messes with the transition animation-->
    <style name="description_lesson_subheader">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">?attr/colorAccent500</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="description_lesson_text">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
    <style name="description_table_highlighted_item">
        <item name="android:textColor">?attr/color500</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="description_table_plain_item">
        <item name="android:textSize">15sp</item>
        <item name="android:padding">12dp</item>
    </style>


    <!--setting a window background is apparently the best way to go with splash screens-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


</resources>
